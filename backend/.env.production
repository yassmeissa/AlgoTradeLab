# Example .env file for production

# Database
DATABASE_URL=postgresql://algotrade:secure_password@db.example.com:5432/algotrade_db

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production-with-strong-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_NAME=AlgoTrade Lab
DEBUG=False
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO

# Redis
REDIS_URL=redis://cache.example.com:6379/0

# WebSocket
WS_HOST=0.0.0.0
WS_PORT=8001

# External APIs (optional)
ALPHA_VANTAGE_API_KEY=your_api_key_here
IEX_CLOUD_API_KEY=your_api_key_here

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456
